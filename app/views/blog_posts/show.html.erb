<p id="notice" class="alert alert-success"><%= notice %></p>


<h2><%= @blog_post.subject %></h2>
<p class="author">by <%= @blog_post.author %></p>
<p><small><%= @blog_post.created_at.strftime("%b %d, %Y") %></small></p>
<p><%= @blog_post.article %></p>


<!-- <p>
  <strong>Blog:</strong>
  <%= @blog_post.blog.blog_name %>
</p> -->

<p><%= link_to 'Edit', edit_blog_post_path(@blog_post) %> |
<%= link_to 'Back', blog_posts_path %></p>

<h3>Comments</h3>
<span class="comment-count">
	<% if @blog_post.num_comments == nil %>
		No Comments
	<% elsif @blog_post.num_comments == 1 %>
		<a href="#"><%= @blog_post.num_comments %> Comment</a>
	<% else %>
		<a href="#"><%= @blog_post.num_comments %> Comments</a>
	<% end %>
</span></p>

<% @comments.each do |comment| %>
	<div class="panel panel-default">
		<div class="panel-body">
			<p><%= comment.comment%></p>
			<p><%= comment.created_at.strftime("%b %d, %Y") %></p>
			<p>by <%= comment.author%></p>
		</div>
	</div>
<%end%>





